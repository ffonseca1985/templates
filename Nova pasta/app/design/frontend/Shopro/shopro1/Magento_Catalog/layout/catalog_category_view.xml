<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body> 
		<move element="category.image" destination="col.main" before="-"/>
		<referenceContainer name="col.left">
			<block class="Magento\Cms\Block\Block" name="banner_left" before="Recentproductslider">
				<arguments>
					<argument name="block_id" xsi:type="string">banner_left</argument>
				</arguments>
			</block>		
			<block class="Plazathemes\Recentproductslider\Block\Products" name="Recentproductslider" template="productslider.phtml" />
		</referenceContainer>
		<referenceContainer name="main.bottom">
			
		</referenceContainer>		
    </body>
</page>
